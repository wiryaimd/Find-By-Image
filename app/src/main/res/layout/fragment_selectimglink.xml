<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/selectimglink_relative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/custom_color2"
        android:gravity="center_vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/selectimglink_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_color2"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gallery">

        </ImageView>

        <TextView
            android:id="@+id/selectimglink_tvlink"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/sflight"
            android:gravity="center"
            android:maxLength="18"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/selectimglink_img"
            android:layout_width="120dp"
            android:textSize="14sp"
            android:layout_height="25dp">

        </TextView>

    </RelativeLayout>

    <TextView
        android:id="@+id/selectimglink_loadmoreimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/selectimglink_relative1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_color4"
        android:drawableStart="@drawable/ic_reload"
        android:drawablePadding="8dp"
        android:fontFamily="@font/sfbold"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="Load more"
        android:textColor="@color/color2"
        android:textSize="14sp"
        android:visibility="visible">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectimglink_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectimglink_relative1"
        android:layout_marginTop="6dp"
        android:clipToPadding="false"
        android:paddingStart="0dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>